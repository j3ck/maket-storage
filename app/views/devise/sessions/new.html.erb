<style type="text/css">
	body { background: #eee; }
</style>
<div class="container sign_in">
<h2>Sign in</h2>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { class: "form-signin" }) do |f| %>
  <%= f.email_field :email, :autofocus => true, class: "form-control top large", placeholder: "Email address"%>

  <%= f.password_field :password, class: "form-control bot large", placeholder: "Password" %>

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
  <% end -%>

  <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
<% end %>
</div>