<div class="maket_wrapper">
<%= form_for maket,  :format => :json, :remote => true, :html => { :'data-type' => 'json', class:"form-inline", role:"form" } do |f| %>

	<% if maket.errors.any? %>
	    <div class="panel panel-danger">
	      <div class="panel-heading">
	      	Ошибки при сохранении проекта:
	      </div>

	      <ul>
	      <% maket.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
  	<% end %>

  <%= f.text_field :name, placeholder: "Название макета", class: "form-control" %>
  <div class="form-group">
    <%= f.file_field :image %>
    <%= f.hidden_field :version_id, :value => maket.version_id %>
  </div>

  <%= f.submit "Добавить макет", class: "btn btn-success btn-sm maket_up" %>
<% end %>
</div>