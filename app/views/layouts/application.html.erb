<!DOCTYPE html>
<html>
<head>
  <title>MaketStorage</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%# if current_page?(url_for(:controller => 'makets', :action => 'show')) %>
<% if params[:controller] == 'makets' %>
	<%= yield %>
<% else %>
	<div class="container">
		<div class="header">
  				<div class="container">
						<h3 class="navbar-text text-muted logo">Maket storage</h3>
					<% if user_signed_in? %>
						<%= render 'layouts/user_bar' %>
					<% end %>
  				</div>
		</div>
		<% if user_signed_in? %>
			<% if current_user.role == "Administrator" %>
				<%= render 'layouts/admin_navs' %>
			<% end %>
		<% end %>
		<% flash.each do |name, msg| -%>
   			<div class="alert alert-warning alert-dismissable">
  				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  			<%= msg %>
			</div>
		<% end %>
		<%= yield %>
	</div>
<% end %>
</body>
</html>
